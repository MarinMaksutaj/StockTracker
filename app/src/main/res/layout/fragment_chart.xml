<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChartFragment">

        <TextView
            android:id="@+id/tickerNameTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="30dp"
            android:textColor="@color/theme_blue2"
            android:paddingTop="5dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/chartImageView"
            app:layout_constraintVertical_weight="2"
            android:text="Ticker Name"
            />

        <ImageView
            android:id="@+id/chartImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tickerNameTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/shareChartButton"
            android:src="@drawable/sample_chart"
            app:layout_constraintVertical_weight="7"/>
        <Button
            android:id="@+id/shareChartButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="@string/share_button"
            android:background="@color/theme_blue"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/chartImageView"
            app:layout_constraintBottom_toTopOf="@id/stockListView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_weight="1"/>


    <ListView
        android:id="@+id/stockListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="6"
        app:layout_constraintTop_toBottomOf="@id/shareChartButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>